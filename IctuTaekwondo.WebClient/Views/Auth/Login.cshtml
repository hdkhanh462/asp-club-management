@using IctuTaekwondo.Shared.Schemas.Auth
@model LoginSchema

@{
	ViewData["Title"] = "Đăng nhập";
	Layout = "_AuthLayout";
}

<div class="mx-auto w-full max-w-md py-16">
	<form asp-action="Login" method="post" class="rounded-lg border border-gray-200 bg-white p-6 shadow dark:bg-gray-800 dark:border-gray-700">
		<h2 class="mb-5 text-2xl font-semibold text-gray-900 dark:text-white">Đăng nhập tài khoản</h2>

		@if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty]?.Errors.Count > 0)
        {
            <div class="mb-5 flex items-center rounded-lg border border-red-300 bg-red-50 p-4 text-sm text-red-800 dark:bg-gray-800 dark:text-red-400 dark:border-red-800" role="alert">
                <svg class="flex-shrink-0 me-3 inline h-4 w-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z" />
                </svg>
				<div>
					<span class="font-medium">Lỗi phát sinh:</span>
					<ul class="mt-1.5 list-inside list-disc">
						@foreach (var error in ViewData.ModelState[string.Empty]?.Errors!)
						{
							<li>@error.ErrorMessage</li>
						}
					</ul>
				</div>
            </div>
        }

		<div class="mb-5">
			<label asp-for="Email" class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"></label>
			<input asp-for="Email" class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="email@example.com" />
			<p class="mt-2 text-sm text-red-600 dark:text-red-500">
				<span asp-validation-for="Email"></span>
			</p>
		</div>
		<div class="mb-5">
			<label asp-for="Password" class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"></label>
			<input asp-for="Password" class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" />
			<p class="mt-2 text-sm text-red-600 dark:text-red-500">
				<span asp-validation-for="Password"></span>
			</p>
		</div>
		<div class="mb-5 flex items-start">
			<div class="flex h-5 items-center">
				<input asp-for="RememberMe" class="h-4 w-4 rounded border border-gray-300 bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:ring-offset-gray-800 dark:focus:ring-blue-600 dark:focus:ring-offset-gray-800" />
			</div>
			<label asp-for="RememberMe" class="ms-2 text-sm font-medium text-gray-900 dark:text-gray-300"></label>
		</div>
		<button type="submit" class="w-full rounded-lg bg-blue-700 px-5 py-2.5 text-center text-sm font-medium text-white hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
			Đăng nhập
		</button>
	</form>
</div>

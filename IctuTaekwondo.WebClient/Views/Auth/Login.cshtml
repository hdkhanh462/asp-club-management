@using IctuTaekwondo.WebClient.Models
@model LoginViewModel

@{
	ViewData["Title"] = "Đăng nhập";
}

<div class="panel panel-default mx-auto max-w-md my-5">
	<div class="panel-heading">
		<h3 class="mb-3">Đăng nhập</h3>
	</div>
	<div class="panel-body">
		<form asp-controller="Auth" asp-action="Login" method="post">
			<div class="form-group mb-3">
				<label class="mb-1" for="Email">Tên đăng nhập</label>
				<input asp-for="Email" class="form-control" />
				@Html.ValidationMessageFor(m => m.Email)
			</div>

			<div class="form-group mb-3">
				<label class="mb-1" for="Password">Mật khẩu</label>
				<input asp-for="Password" class="form-control" />
				@Html.ValidationMessageFor(m => m.Password)
			</div>

			<div class="form-check mb-3">
				<input class="form-check-input" asp-for="RememberMe">
				<label class="form-check-label" for="RememberMe">
					Lưu phiên đăng nhập
				</label>
			</div>

			<button type="submit" class="btn btn-primary mb-3 w-100 fw-bold">Đăng nhập</button>

			<p class="mb-0">
				Chưa có tài khoản? <a asp-controller="Auth" asp-action="Register" class="link-primary fw-bold">Đăng ký</a>
			</p>
		</form>
	</div>
</div>

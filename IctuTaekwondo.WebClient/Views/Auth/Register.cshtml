@using IctuTaekwondo.WebClient.Models
@using IctuTaekwondo.Shared.Enums
@model RegisterViewModel

@{
	ViewData["Title"] = "Đăng ký";
	Layout = "_AuthLayout";
}

<div class="mx-auto max-w-md py-16">
	<form asp-action="Register" method="post" class="rounded-lg border border-gray-200 bg-white p-6 shadow dark:bg-gray-800 dark:border-gray-700">
		<h2 class="mb-5 text-2xl font-semibold text-gray-900 dark:text-white">Đăng ký hội viên</h2>

		@if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty]?.Errors.Count > 0)
		{
			<div class="mb-4 flex rounded-lg bg-red-50 p-4 text-sm text-red-800 dark:bg-gray-800 dark:text-red-400" role="alert">
				<svg class="flex-shrink-0 me-3 mt-[2px] inline h-4 w-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
					<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z" />
				</svg>
				<div>
					<span class="font-medium">Có lỗi xảy ra khi đăng ký:</span>
					<ul class="mt-1.5 list-inside list-disc">
						@foreach (var error in ViewData.ModelState[string.Empty]?.Errors!)
						{
							<li>@error.ErrorMessage</li>
						}
					</ul>
				</div>
			</div>
		}

		<div class="mb-5">
			<label asp-for="FullName" class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"></label>
			<input asp-for="FullName" autofocus class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Nguyễn Văn A" />
			<p class="mt-2 text-sm text-red-600 dark:text-red-500">
				<span asp-validation-for="FullName"></span>
			</p>
		</div>
		<div class="mb-5">
			<label asp-for="Role" class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"></label>
			<select asp-for="Role" class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
				<option value="@Role.Member">Hội viên</option>
				<option value="@Role.Manager">Người quản lý</option>
				<option value="@Role.Admin">Quản trị viên</option>
			</select>
			<p class="mt-2 text-sm text-red-600 dark:text-red-500">
				<span asp-validation-for="Role"></span>
			</p>
		</div>
		<div class="mb-5">
			<label asp-for="Email" class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"></label>
			<input asp-for="Email" autocomplete="new-password" class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="email@example.com" />
			<p class="mt-2 text-sm text-red-600 dark:text-red-500">
				<span asp-validation-for="Email"></span>
			</p>
		</div>
		<div class="mb-5">
			<label asp-for="Password" class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"></label>
			<input asp-for="Password" autocomplete="new-password" class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" />
			<p class="mt-2 text-sm text-red-600 dark:text-red-500">
				<span asp-validation-for="Password"></span>
			</p>
		</div>
		<div class="mb-5">
			<label asp-for="ConfirmPassword" class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"></label>
			<input asp-for="ConfirmPassword" autocomplete="new-password" class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" />
			<p class="mt-2 text-sm text-red-600 dark:text-red-500">
				<span asp-validation-for="ConfirmPassword"></span>
			</p>
		</div>

		<button type="submit" class="w-full rounded-lg bg-blue-700 px-5 py-2.5 text-center text-sm font-medium text-white hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
			Đăng ký
		</button>
	</form>
</div>

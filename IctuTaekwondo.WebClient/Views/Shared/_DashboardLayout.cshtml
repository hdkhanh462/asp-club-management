<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - IctuTaekwondo</title>

	<link rel="stylesheet" href="~/lib/tailwindcss/styles.css" asp-append-version="true" />

	<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/flowbite-datepicker@1.3.0/dist/js/datepicker-full.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.3.4/dist/js/locales/vi.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/datepicker.js"></script>

</head>
<body>
	@await Html.PartialAsync("Partials/_NavbarPartial.cshtml")
	@await Component.InvokeAsync("Sidebar")

	<div class="sm:ml-64">
		<div class="p-4">
			<div class="mt-14">
				<main class="min-h-screen">
					@RenderBody()
				</main>
			</div>
		</div>
		@await Html.PartialAsync("Partials/_FooterPartial.cshtml")
	</div>

	@await RenderSectionAsync("Scripts", required: false)
	@await RenderSectionAsync("Modals", required: false)
</body>
</html>
